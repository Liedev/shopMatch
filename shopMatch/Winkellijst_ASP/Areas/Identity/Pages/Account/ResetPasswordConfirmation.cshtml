@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Bevestiging van Wachtwoordswijziging";
}

<div class="container">
    <div class="card border-0 shadow my-5">
        <div class="card-body p-5">
            <h2>@ViewData["Title"]</h2>
            <p>
                Uw wachtwoord is succesvol gewijzigd! Gelieve deze <a asp-page="./Login">link</a> aan te klikken om in te loggen.
            </p>
        </div>
    </div>
</div>

