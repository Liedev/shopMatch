@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Wachtwoord Aanpassing";
}

<div class="container">
    <div class="card border-0 shadow my-5">
        <div class="card-body p-5">
            <h2>@ViewData["Title"]</h2>
            <div class="row">
                <p>
                    Gelieve uw email na te kijken om uw wachtwoord opnieuw in te stellen !
                </p>
            </div>
            <p>
                <a class="btn btn-dark" asp-controller="Home" asp-action="Index">Terug naar inloggen</a>
            </p>
        </div>
    </div>
</div>





